@model IEnumerable<Model.Coupon>

@{
    ViewBag.Title = "Coupons";
}
<h2>Cadastrar novo cupom Premiado</h2>

@using (Html.BeginForm("RegisterAwardedCode", "Home", FormMethod.Post))
{
    <input type="text" name="code" id="code" />
    <input type="submit" value="Cadastro" />
}
@if (TempData["notice"] != null)
{
    <p>@TempData["notice"]</p>
}

<div style="height:600px; overflow:auto;" class="container">
    <table class="table">
        <tr>
            <th>
                Código
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
            </tr>
        }
    </table>
</div>